 $(function () {     
	    $(".icoFuliLevel").each(function (options) {
			options = $.extend({
				x: 10,
				y: 10
			}, options);
			var $this = $(this);
			$this.mouseover(function (e) {
					this.myTitle = $(this).attr("name");
				console.log($(this).attr("name"))
				//this.title = "";
				var titlehtml = "";
				var arrtitle = this.myTitle;
				arrtitle = arrtitle.split('、');
				for (var i = 0, length = arrtitle.length; i < length; i++) {
					titlehtml += "<li  style='float:left;width:83px;margin-left:17px;line-height:25px;list-style-type:none'>•" + arrtitle[i] + "</li>";
				}
				var tooltip = "<div  id='tooltip' style='background:#ffffe1;display:none; width:208px;border: 1px solid #ffaa00;padding-bottom:5px'><div style='clear:both'><ul style='margin:0px;padding:0px'><li style='clear:both;list-style: none;font-weight:bold; line-height:25px;margin-left:19px;margin-top:3px;width:200px;'>福利待遇：</li>" + titlehtml + "</ul></div></div>";
				$("body").append(tooltip);				
				var a=0;					
				if((e.pageY+options.y)-(Math.max(document.body.scrollTop,document.documentElement.scrollTop)+document.documentElement.clientHeight-10-$("#tooltip").height())>0)		 
				{
					a=	(Math.max(document.body.scrollTop,document.documentElement.scrollTop)+document.documentElement.clientHeight-10-$("#tooltip").height())
				}
				else
				{
					a=e.pageY+options.y
				}
				$("#tooltip").css({
					"position": "absolute",
					"top": (a) + "px",
					"left": (e.pageX + options.x) + "px",
					"z-index": "999"
				}).show("fast");
			}).mouseout(function () {
				//this.title = this.myTitle;
				$("#tooltip").remove();
			}).mousemove(function (e) {
								var a=0;
				if((e.pageY+options.y)-(Math.max(document.body.scrollTop,document.documentElement.scrollTop)+document.documentElement.clientHeight-10-$("#tooltip").height())>0)		 
				{
					a=	(Math.max(document.body.scrollTop,document.documentElement.scrollTop)+document.documentElement.clientHeight-10-$("#tooltip").height())
				}
				else
				{
					a=e.pageY+options.y
				}
				$("#tooltip").css({
					"position": "absolute",
					"top": (a) + "px",
					"left": (e.pageX + options.x) + "px",
					"z-index": "999"
				});
			});
			return this;   //方法可链接
		});
    });