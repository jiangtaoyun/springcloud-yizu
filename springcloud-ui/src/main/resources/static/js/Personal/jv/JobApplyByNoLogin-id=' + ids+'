  <script type="text/javascript">
      var arrAjaxValue = new Array();
      var arrAjaxState = new Array();
      function _(s) { return document.getElementById(s) }
      function EmailOnClick() {
          var txtEmail = _("txtEmail");
          if (txtEmail.value == "电子邮箱") {
              txtEmail.value = "";
              txtEmail.style.color = "#000";
          }
      }
      function txtEmail_blur(obj) {
          if (!obj.value) {
              _("spEmail").innerHTML = "";
              obj.value = "电子邮箱";
              obj.style.color = "#b3b4b6";
              return;
          }
          if (!CheckRule("email", obj.value)) _("spEmail").innerHTML = strError + '<font>邮箱格式错误</font>';
          else {
              var R = AjaxExist(obj.value);
              if (!isNaN(R)) {
                  if (R == 0) _("spEmail").innerHTML = strSuccess;
                  if (R == 1) _("spEmail").innerHTML = strError + '<font>邮箱已经存在，请重新输入</font>';
              }
              else {
                  _("spEmail").innerHTML = strWaiting;
                  Ajax("Post", "/personal/Sys/AjaxEmailExist", "Email=" + obj.value, SetEmail, false);
              }
          }
      }

      function SetEmail(obj) {
          var data = obj.responseText;
          if (data == 0) _("spEmail").innerHTML = strSuccess;
          if (data == 1) _("spEmail").innerHTML = strError + "<font>邮箱已经存在，请重新输入</font>";
          if (isNaN(data)) alert("系统错误，请刷新后重试");
          else {
              arrAjaxValue[arrAjaxValue.length] = _("txtEmail").value;
              arrAjaxState[arrAjaxState.length] = data;
          }
      }

      function AjaxExist(value) {
          for (var i = 0; i < arrAjaxValue.length; i++)
              if (value == arrAjaxValue[i]) return arrAjaxState[i];
      }
      function NameOnClick() {
          var txtName = _("txtName");
          if (txtName.value == "您的姓名") {
              txtName.value = "";
              txtName.style.color = "#000";
          }
      }
      function txtName_blur(obj) {
          if (!obj.value) {
              _("spName").innerHTML = "";
              obj.value = "您的姓名";
              obj.style.color = "#b3b4b6";
              return;
          }
          if (!CheckRule("chinese", obj.value)) _("spName").innerHTML = strError + '<font>请输入汉字</font>';
          else {
              if (obj.value.length == 1) _("spName").innerHTML = strError + '<font>请输入1个以上的汉字</font>';
              else _("spName").innerHTML = "";
          }
      }
      function AttachmentOnClick() {
          var txtAttachment = _("txtAttachment");
          if (txtAttachment.value == "上传附件简历") {
              txtAttachment.value = "";
          }
      }
      function AttachmentOnBlur() {
          var txtAttachment = _("txtAttachment");
          if (txtAttachment.value == "") {
              txtAttachment.value = "上传附件简历";
          }
      }
      function checkForm() {
          if (!_("txtEmail").value || _("txtEmail").value == "电子邮箱") {
              alert("请输入您的电子邮箱！");
              _("txtEmail").focus();
              return false;
          }
          if (!_("txtName").value || _("txtName").value=="您的姓名") {
              alert("请输入您的姓名！");
              _("txtName").focus();
              return false;
          }
          if (!_("attachment").value) {
              alert("请选择简历文档！");
              _("attachment").focus();
              return false;
          }
          var fileExt = _("attachment").value.substring(_("attachment").value.lastIndexOf(".") + 1)
          if (fileExt.toUpperCase() != "DOC" && fileExt.toUpperCase() != "XLS" && fileExt.toUpperCase() != "DOCX" && fileExt.toUpperCase() != "XLSX") {
              alert("请选择正确格式的简历文档")
              return false;
          }

          if (_("spName").innerHTML) return false;
          if (_("spEmail").innerHTML.toLowerCase().indexOf("iconf") > 0) return false;
          var fileName = _("attachment").value.substring(_("attachment").value.lastIndexOf("\\") + 1);
          var str;
          str = "https://down.51rc.com/ImagesManager/JobApplyByNoLoginProcNew.asp";
          str += "?email=" + _("txtEmail").value;
          str += "&name=" + escape(_("txtName").value);
          str += "&cvfileName=" + escape(fileName);
          str += "&gender=" + _("hdnSex").value;
          str += "&jobid=0";
          str += "&domain=www.shoudurc.com";
          str += "&provinceID=10";
          _("frmWord").action = str;
          return true;
      }
      function showLogin() {
          document.getElementById('ContentLogin').style.display = "block";
          document.getElementById('ContentDoc').style.display = "none";
          document.getElementById('tab_Login').className = "Select";
          document.getElementById('tab_Word').className = "UnSelect";
      }
      function showWord() {
          document.getElementById('ContentLogin').style.display = "none";
          document.getElementById('ContentDoc').style.display = "block";
          document.getElementById('tab_Login').className = "UnSelect";
          document.getElementById('tab_Word').className = "Select";
      }
      function ChangeSex(sex) {
          if (sex == 0) {
              _("rbMale").className = "rbChecked";
              _("rbFemale").className = "rbUnchecked";
              _("hdnSex").value = "0";
          }
          else {
              _("rbMale").className = "rbUnchecked";
              _("rbFemale").className = "rbChecked";
              _("hdnSex").value = "1";
          }
      }
      function TransferValue() {
          _("txtAttachment").value = _("attachment").value;
      }
      function GoLoinRedirect(type) {
          var Days = 30;
          var exp = new Date();
          exp.setTime(exp.getTime() + Days * 24 * 60 * 60 * 1000);
          document.cookie = "urlfile=" + escape(location.href) + ";expires=" + exp.toGMTString();
          if (type == 1) {
              window.parent.open("/personal/sys/QQLoginRediret");
          }
          else if (type == 2) {
              window.parent.open("/personal/sys/SinaLoginRediret");
          }
          else if (type == 3) {
              window.parent.open("/personal/sys/RenRenLoginRediret");
          }
      }
      function getInternetExplorerVersion() {
          var rv = -1;
          if (navigator.appName == 'Microsoft Internet Explorer') {
              var ua = navigator.userAgent;
              var re = new RegExp("MSIE ([0-9]{1,}[\.0-9]{0,})");
              if (re.exec(ua) != null) {
                  rv = parseFloat(RegExp.$1);
              }
          }
          return rv;
      }
      function checkVersion() {
          var ver = getInternetExplorerVersion();
          if (ver > -1) {
              if (ver >= 7 && ver <= 10) {
                  _("attachment").className = "file2";
                  _("selFile").style.display = "none";
                  if (ver >= 9) {
                      _("fileover").className = "fileover1";
                  }
                  else if (ver == 7) {
                      _("fileover").className = "fileover2";
                  }
              }
          }
      }
      window.onload = function () {
          checkVersion();
      }
</script>
