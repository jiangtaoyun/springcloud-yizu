    <select id="queryWork" resultType="com.jk.model.SouWork">
    SELECT t.tname,c.qName,c.qArea,a.AREANAME,w.* FROM t_work w LEFT JOIN t_type t ON w.typeId = t.tid

         LEFT JOIN t_company c ON w.compId = c.qId left join t_area a on c.qArea = a.AREACODE
      </select>
